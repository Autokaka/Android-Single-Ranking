<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.dshitpie.filemanager2">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.AppManager"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.Rename"
            android:launchMode="singleTask"
            android:theme="@style/Dialog" />
        <activity
            android:name=".activity.NewBuild"
            android:launchMode="singleTask"
            android:theme="@style/Dialog" />
        <activity
            android:name=".activity.ToolbarMenu"
            android:launchMode="singleTask"
            android:theme="@style/Menu" />
        <activity
            android:name=".activity.OperationMenu"
            android:launchMode="singleTask"
            android:theme="@style/Dialog" />
        <activity
            android:name=".activity.Main"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>