<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="right">
	<LinearLayout android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:id="@+id/linearLayout1" android:padding="10sp">
		<TextView android:id="@+id/textView1" android:layout_height="wrap_content"
			android:text="Weight (in Kg)" android:layout_width="wrap_content"
			android:layout_weight="1"></TextView>
		<TextView android:id="@+id/textView2" android:layout_height="wrap_content"
			android:text="Height (in cm)" android:layout_width="wrap_content"
			android:layout_weight="1"></TextView>
		<TextView android:id="@+id/textView3" android:layout_height="wrap_content"
			android:text="Age" android:layout_width="wrap_content"
			android:layout_weight="1"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/linearLayout2"
		android:orientation="horizontal">
		<EditText android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/weight"
			android:layout_weight="1" android:inputType="number"></EditText>
		<EditText android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/height"
			android:layout_weight="1" android:inputType="number"></EditText>
		<EditText android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/age"
			android:layout_weight="1" android:inputType="number"></EditText>
	</LinearLayout>
	<RadioGroup android:layout_width="wrap_content" android:id="@+id/gender"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<RadioButton android:text="Male"
			android:layout_height="wrap_content" android:id="@+id/male"
			android:layout_width="wrap_content" android:checked="true"></RadioButton>
		<RadioButton android:text="Female"
			android:layout_height="wrap_content" android:id="@+id/female"
			android:layout_width="wrap_content"></RadioButton>
	</RadioGroup>
	<Button android:text="Calculate" android:id="@+id/button1"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<LinearLayout android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_width="fill_parent" android:id="@+id/linearLayout3"
		android:gravity="center" android:visibility="invisible">
		<LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout5" android:layout_height="fill_parent">
			<TextView android:layout_width="wrap_content" android:text="Your BMI is: " android:id="@+id/textView4" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_width="wrap_content" android:text="TextView" android:id="@+id/bmi_index" android:layout_height="wrap_content"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout4" android:layout_height="fill_parent">
			<TextView android:layout_width="wrap_content" android:text="Your BMR is: " android:id="@+id/textView5" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_width="wrap_content" android:text="TextView" android:id="@+id/bmr_index" android:layout_height="wrap_content"></TextView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
